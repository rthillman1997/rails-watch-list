<h1><%= @list.name %></h1>
<div class="row justify-content-center">
  <div class="col-8">
    <% @list.bookmarks.each do |bookmark| %>
      <h2><%= bookmark.movie.title %> <%= bookmark.movie.rating %> ♥︎ </h2>
      <p><%= bookmark.movie.overview %></p>
      <%= image_tag "#{bookmark.movie.poster_url}", height: 200 %>
      <p><%= bookmark.comment %></p>
      <%= link_to "Delete this movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "button" %>
      <br>
      <br>
    <% end %>
    <br>
    <br>
    <%= link_to "add a movie", new_list_bookmark_path(@list), class: "add-movie" %>
    <br>
    <br>
    <br>
    <%= link_to "back to main page", lists_path, class: "back-page" %>
  </div>
</div>
